<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import chalmers.dat055.achtung.gui.PlayPauseButton?>

<VBox
    xmlns="http://javafx.com/javafx/13" 
    xmlns:fx="http://javafx.com/fxml/1"
    fx:id="rootLayout"
    fx:controller="chalmers.dat055.achtung.demo.DuelController"
    alignment="TOP_CENTER"
    minHeight="Infinity"
    minWidth="Infinity"
    stylesheets="@duelapp_main.css">

    <HBox
        fx:id="menuLayout">

        <Label
            fx:id="mStartGameLabel"
            styleClass="clickable-menu-item-label"
            text="Start"/>

        <StackPane>
            <PlayPauseButton
                fx:id="mPlayPauseButton"
                width="22"
                height="22"/>
        </StackPane>

        <Label 
            styleClass="menu-item-section-divider"
            text="|"/>
        
        <Label
            styleClass="static-menu-item-label"
            text="Players:"/>
    </HBox>

</VBox>