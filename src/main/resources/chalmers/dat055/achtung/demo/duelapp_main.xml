<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>

<VBox
    xmlns="http://javafx.com/javafx/13" 
    xmlns:fx="http://javafx.com/fxml/1"
    fx:id="rootLayout"
    fx:controller="chalmers.dat055.achtung.demo.DuelController"
    alignment="TOP_CENTER"
    minHeight="Infinity"
    minWidth="Infinity"
    stylesheets="@duelapp_main.css">

    <HBox
        fx:id="menuLayout">

        <Label
            fx:id="playButton"
            styleClass="clickable-menu-item-label"
            text="Start"/>

        <Label
            fx:id="pauseButton"
            styleClass="clickable-menu-item-label"
            disable="true"
            text="Pause"/>

        <Label 
            styleClass="menu-item-section-divider"
            text="|"/>
        
        <Label
            styleClass="static-menu-item-label"
            text="Players:"/>
    </HBox>

</VBox>